<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"

    tools:context=".ui.main.MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icons_layout">

        <LinearLayout
            android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="Dokumenty"
                android:textColor="@color/lightGray"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_gradient_green"
                    android:elevation="6dp"
                    android:gravity="center_vertical"
                    android:onClick="onOrdersClicked"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        android:elevation="16dp"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_receipt"
                        app:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="36dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ZamÃ³wienia"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_gradient_blue"
                    android:elevation="6dp"
                    android:gravity="center_vertical"
                    android:onClick="onNewDocumentClicked"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        android:elevation="16dp"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/round_description_24"
                        app:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="36dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Nowy dokument"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="normal" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Produkty"
                android:textColor="@color/lightGray"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_gradient_red"
                    android:elevation="6dp"
                    android:gravity="center_vertical"
                    android:onClick="onChangeLocationClicked"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        android:elevation="16dp"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_edit_location"
                        app:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="36dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Zmiana lokalizacji"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_gradient_orange"
                    android:elevation="6dp"
                    android:gravity="center_vertical"
                    android:onClick="onScanWareClicked"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        android:elevation="16dp"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_qr_code_scanner"
                        app:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="36dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Skanuj produkt"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="normal" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/icons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_half_round_dark_right"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="6dp"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/error_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onErrorsClicked"
            android:tint="@color/design_default_color_error"
            android:visibility="visible"
            app:backgroundTint="@android:color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:srcCompat="@drawable/round_priority_high_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/synchronize_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onSynchroniseClicked"
            android:tint="@color/lightGray"
            app:backgroundTint="@android:color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:srcCompat="@drawable/round_loop_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sending_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onSendingClicked"
            android:tint="@color/lightGray"
            app:backgroundTint="@android:color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:srcCompat="@drawable/round_publish_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/settings_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onSettingsClicked"
            android:tint="@color/colorPrimaryDark"
            app:backgroundTint="@color/lightGray"
            app:borderWidth="0dp"
            app:srcCompat="@drawable/round_settings_24" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
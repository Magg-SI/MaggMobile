<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightGray</item>
        <item name="colorPrimaryDark">@color/colorAccentLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/selectionGray</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/lightGray</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppThemeBlue" parent="AppTheme">
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="colorPrimaryDark">@color/colorAccentBlueLight</item>

    </style>

    <style name="AppThemeOrange" parent="AppTheme">
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="colorPrimaryDark">@color/colorAccentOrangeLight</item>
    </style>

    <style name="AppThemeRed" parent="AppTheme">
        <item name="colorAccent">@color/colorAccentRed</item>
        <item name="colorPrimaryDark">@color/colorAccentRedLight</item>
    </style>

    <style name="AppThemeWhite" parent="AppTheme">
        <item name="colorAccent">@color/design_default_color_background</item>
    </style>

    <style name="roundFAB" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="round_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="round_chip" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/round_checkbox</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="round_progress_bar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_round</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
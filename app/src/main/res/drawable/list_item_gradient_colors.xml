<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners android:radius="8dp" />
        <padding
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp" />

        <solid android:color="@color/design_default_color_background" />

        <gradient
            android:startColor="@color/colorAccentDark"
            android:centerColor="@color/colorAccentRed"
            android:endColor="@color/colorAccentOrangeDark"
            android:angle="0" />
    </shape>
</item>

<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners android:radius="8dp" />
        <padding
            android:bottom="16dp"
            android:left="16dp"
            android:right="16dp"
            android:top="16dp" />

        <solid android:color="@color/colorPrimary" />

    </shape>
</item>
</layer-list>